{
	"name": "template",
	"version": "1.0.0",
	"description": "",
	"main": "./build/index.html",
	"keywords": [],
	"author": "davidbdyer",
	"license": "ISC",
	"scripts": {
		"dev": "npm-run-all copy --parallel watch serve",
		"dev-build": "npm-run-all clean copy sass autoprefixer",
		"prod-build": "npm-run-all clean copy sass autoprefixer-no-map minify",
		"serve": "browser-sync start --server ./build --files ./build",

		"sass": "sass ./src/sass:./build/css --no-source-map",
		"sort-declarations": "postcss './src/sass/**/*.scss' --replace --config package.json",
		"autoprefixer": "postcss ./build/css/style.css --use autoprefixer --map --replace",
		"autoprefixer-no-map": "postcss ./build/css/style.css --use autoprefixer --no-map --replace",
		"eslint": "eslint ./scripts/* --fix",
		"clean": "rimraf ./build",

		"copy": "npm-run-all --parallel copy:*",
		"copy:html": "copyfiles -u 1 ./src/**/*.html ./build",
		"copy:images": "copyfiles -u 1 ./src/**/*.{jpg,jpeg,png,gif,svg,webp} ./build",
		"copy:scripts": "copyfiles -u 1 ./src/**/*.js ./build",

		"watch": "npm-run-all --parallel watch:*",
		"watch:sass": "sass --watch --source-map ./src/sass:./build/css",
		"watch:images": "onchange './src/**/*.{png,jpg,jpeg,gif,svg}' -- npm run copy:images",
		"watch:html": "onchange './src/**/*.html' -- npm run copy:html",
		"watch:css": "onchange ./build/**/*.css -- npm run autoprefixer",
		"watch:js": "onchange ./src/**/*.js -- npm run copy:scripts",
		
		"minify": "npm-run-all --parallel minify:*",
		"minify:js": "terser ./src/scripts/*.js --compress --output ./build/scripts/*.js",
		"minify:css": "postcss --use cssnano --no-map --replace  ./build/css/*.css"
	},
	"devDependencies": {
		"autoprefixer": "~10.4.19",
		"browser-sync": "~3.0.2",
		"copyfiles": "~2.4.1",
		"css-declaration-sorter": "~7.2.0",
		"cssnano": "~7.0.4",
		"cssnano-preset-advanced": "~7.0.4",
		"eslint": "~9.8.0",
		"npm-run-all": "~4.1.5",
		"onchange": "~7.1.0",
		"postcss": "~8.4.40",
		"postcss-cli": "~11.0.0",
		"postcss-scss": "~4.0.9",
		"purgecss": "~6.0.0",
		"rimraf": "~6.0.1"
	},
	"postcss": {
		"syntax": "postcss-scss",
		"map": false,
		"plugins": {
			"css-declaration-sorter": {
				"order": "concentric-css"
			}
		}
	},
	"cssnano": {
		"preset": "advanced"
	},
	"browserslist": [
		"> 0.5% or last 2 versions and not dead"
	],
	"eslintConfig": {
		"env": {
			"browser": true,
			"commonjs": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended"
		],
		"overrides": [],
		"parserOptions": {
			"ecmaVersion": "latest"
		},
		"rules": {
			"no-unused-vars": "off",
			"no-undef": "off",
			"no-empty": "off"
		},
		"plugins": []
	},
	"prettier": {
		"proseWrap": "preserve",
		"bracketSameLine": true,
		"singleQuote": true,
		"arrowParens": "avoid",
		"endOfLine": "lf",
		"printWidth": 100,
		"tabWidth": 2,
		"order": "concentric-css",
		"useTabs": true
	}
}
